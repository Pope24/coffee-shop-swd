<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CoffeeShop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CoffeeShop.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layoutAdmin.css" asp-append-version="true" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <div class="d-flex align-items-center justify-content-between w-100">
                    <a class="navbar-brand me-auto ms-3" asp-area="Admin" asp-page="/Index">CoffeeShop</a>
                    <ul class="navbar-nav">
                        @if (string.IsNullOrEmpty(Context.Session.GetString("IsLogin")))

                        {
                            <li class="nav-item">
                                <a class="btn btn-outline-dark me-2" asp-area="Shared" asp-page="/Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-outline-secondary me-2" asp-area="Shared" asp-page="/Register">Register</a>
                            </li>
                        }

                        else
                        {
                            <form method="post" class="m-0">
                                <li class="nav-item">
                                    <button class="btn btn-outline-danger"
                                            asp-area="Shared"
                                            asp-page="/Login"
                                            asp-page-handler="Logout">
                                        Logout
                                    </button>
                                </li>
                            </form>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="d-flex m-2 h-100 position-relative">
        <!-- Sidebar menu -->
        <div class="navbar-left custom-sidebar border-end p-3 h-auto bg-dark sticky-top">
            <ul class="nav flex-column">
                <li class="nav-item mb-2">
                    <a class="nav-link sidebar-link @(Context.Request.Path == "/Admin/Index" ? "active" : "")"
                       asp-area="Admin" asp-page="/Index">🏠 Home</a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link sidebar-link @(Context.Request.Path == "/Admin/Chats/Index" ? "active" : "")"
                       asp-area="Admin" asp-page="/Chats/Index">💬 Chat Room</a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link sidebar-link @(Context.Request.Path == "/Admin/Tables/Index" ? "active" : "")"
                       asp-area="Admin" asp-page="/Tables/Index">📋 Table</a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link sidebar-link @(Context.Request.Path == "/Admin/User/Index" ? "active" : "")"
                       asp-area="Admin" asp-page="/User/Index">👤 User</a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link sidebar-link @(Context.Request.Path == "/Admin/Size/Index" ? "active" : "")"
                       asp-area="Admin" asp-page="/Size/Index">📏 Size</a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link sidebar-link @(Context.Request.Path == "/Admin/Category/Index" ? "active" : "")"
                       asp-area="Admin" asp-page="/Category/Index">📂 Category</a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link sidebar-link @(Context.Request.Path == "/Admin/Product/Index" ? "active" : "")"
                       asp-area="Admin" asp-page="/Product/Index">🛒 Product</a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link sidebar-link @(Context.Request.Path == "/Admin/Menu/Index" ? "active" : "")"
                       asp-area="Admin" asp-page="/Menu/Index">🍽️ Menu</a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link sidebar-link @(Context.Request.Path == "/Shared/Order/OrderPage" ? "active" : "")"
                       asp-area="Shared" asp-page="/Order/OrderPage" asp-route-Id="1">📝 Order</a>
                </li>
            </ul>
        </div>

        <!-- Main content -->
        <div class="main-content container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - CoffeeShop - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>