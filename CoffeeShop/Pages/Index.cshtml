@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="hero">
    <div class="container">
        <h1>Welcome to CoffeeShop</h1>
        <p>Discover our premium coffees and delicious treats</p>
        <a asp-area="Shared" asp-page="/Order/OrderPage" class="btn btn-lg btn-outline-light">Order Now</a>
    </div>
</div>

<div class="container">
    <div class="row mb-5">
        <div class="col-md-4 mb-4">
            <div class="feature-card">
                <i class="bi bi-cup-hot feature-icon"></i>
                <h3 class="feature-title">Premium Coffee</h3>
                <p>We use only the highest quality beans, roasted to perfection to bring out their unique flavors.</p>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="feature-card">
                <i class="bi bi-bag-check feature-icon"></i>
                <h3 class="feature-title">Easy Ordering</h3>
                <p>Order your favorite coffee and snacks with just a few clicks for pickup or table service.</p>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="feature-card">
                <i class="bi bi-people feature-icon"></i>
                <h3 class="feature-title">Great Atmosphere</h3>
                <p>Enjoy your coffee in our cozy shop with free Wi-Fi and friendly service.</p>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-6 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <h4 class="card-title mb-4">Special Offerings</h4>
                    <div class="d-flex align-items-center mb-3">
                        <div class="flex-shrink-0">
                            <span class="badge bg-coffee-medium p-2 rounded-circle"><i class="bi bi-star-fill text-white"></i></span>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h5 class="mb-1">Seasonal Blends</h5>
                            <p class="mb-0">Try our limited edition seasonal coffee blends</p>
                        </div>
                    </div>
                    <div class="d-flex align-items-center mb-3">
                        <div class="flex-shrink-0">
                            <span class="badge bg-coffee-medium p-2 rounded-circle"><i class="bi bi-cup-straw text-white"></i></span>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h5 class="mb-1">Specialty Drinks</h5>
                            <p class="mb-0">Handcrafted specialty coffee creations</p>
                        </div>
                    </div>
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <span class="badge bg-coffee-medium p-2 rounded-circle"><i class="bi bi-cake2 text-white"></i></span>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h5 class="mb-1">Fresh Pastries</h5>
                            <p class="mb-0">Freshly baked pastries made daily</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-6 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <h4 class="card-title mb-4">Hours & Location</h4>
                    <div class="mb-4">
                        <h5><i class="bi bi-clock me-2"></i> Hours</h5>
                        <p class="mb-1">Monday - Friday: 7:00 AM - 8:00 PM</p>
                        <p class="mb-0">Saturday - Sunday: 8:00 AM - 9:00 PM</p>
                    </div>
                    <div>
                        <h5><i class="bi bi-geo-alt me-2"></i> Location</h5>
                        <p class="mb-1">123 Coffee Street</p>
                        <p class="mb-0">City Center, 10000</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-coffee-medium {
        background-color: var(--coffee-medium);
    }
</style>
