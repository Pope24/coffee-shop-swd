@page
@model CoffeeShop.Areas.Admin.Pages.IndexModel

@{
    ViewData["Title"] = "Admin Dashboard - Coffee Shop";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/indexAdmin.css" asp-append-version="true" />
</head>
<body>

    <div class="header">
        <h1>Welcome to the Admin Dashboard</h1>
        <p>Your one-stop shop for managing the Coffee Shop.</p>
    </div>

    <div class="container-fluid">
        <div class="row">
            <!-- Dashboard Card 1 -->
            <div class="col-md-4 col-sm-6 col-12 mb-4">
                <div class="card">
                    <div class="card-body">
                        <i class="fas fa-cogs"></i>
                        <h5>Manage Products</h5>
                        <p>Update, add, or delete products in your coffee shop.</p>
                        <a href="/Admin/Product" class="btn btn-custom">Go to Products</a>
                    </div>
                </div>
            </div>

            <!-- Dashboard Card 2 -->
            <div class="col-md-4 col-sm-6 col-12 mb-4">
                <div class="card">
                    <div class="card-body">
                        <i class="fas fa-users"></i>
                        <h5>Manage Users</h5>
                        <p>View and manage users who access the system.</p>
                        <a href="/Admin/User" class="btn btn-custom">Go to Users</a>
                    </div>
                </div>
            </div>

            <!-- Dashboard Card 3 -->
            <div class="col-md-4 col-sm-6 col-12 mb-4">
                <div class="card">
                    <div class="card-body">
                        <i class="fas fa-box"></i>
                        <h5>View Orders</h5>
                        <p>View and manage customer orders.</p>
                        <a href="/Admin/Statistics/ListOrder" class="btn btn-custom">Go to Orders</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
