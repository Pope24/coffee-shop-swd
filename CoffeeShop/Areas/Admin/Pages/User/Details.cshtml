@page
@model CoffeeShop.Areas.Admin.Pages.User.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<div class="row justify-content-center">
    <div class="col-md-5 ">
        <div class="card rounded-3 shadow">
            <div class="card-header text-center">
                <h5>User Information Detail</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.User.PhoneNumber)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.User.PhoneNumber)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.User.Username)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.User.Username)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.User.Password)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.User.Password)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.User.FullName)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.User.FullName)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.User.AccountType)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.User.AccountType)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.User.Email)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.User.Email)
                    </dd>
                </dl>

                <div class="form-group mt-3 text-center">
                    <a class="btn btn-outline-success me-5"
                       asp-page="Edit"
                       asp-route-id="@Model.User.UserID">Update Info</a>
                    <a class="btn btn-pill btn-outline-secondary" asp-page="Index">Back to List</a>

                </div>
            </div>
        </div>
    </div>
</div>