@page
@model CoffeeShop.Areas.Admin.Pages.User.DeleteModel

@{
    ViewData["Title"] = "Delete";
}


<div class="row justify-content-center mt-5">
    <div class="col-md-6 ">
        <div class="card rounded-3 shadow">
            <div class="card-header text-center text-danger">
                <h5>Are you sure you want to delete this user?</h5>
            </div>
            <div class="card-body">
                <h5 class="text-center">User Information</h5>
                <div>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.User.PhoneNumber)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.User.PhoneNumber)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.User.Username)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.User.Username)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.User.Password)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.User.Password)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.User.FullName)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.User.FullName)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.User.AccountType)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.User.AccountType)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.User.Email)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.User.Email)
                        </dd>
                    </dl>

                    <form method="post">
                        <input type="hidden" asp-for="User.UserID" />
                        <div class="form-group mt-3 text-center">
                            <button type="submit" class="btn btn-outline-danger me-5">Delete</button>
                            <a class="btn btn-pill btn-outline-secondary" asp-page="Index">Cancel</a>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

