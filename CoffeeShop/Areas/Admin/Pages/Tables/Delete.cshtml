@page
@model CoffeeShop.Areas.Admin.Pages.Tables.DeleteModel

@{
    ViewData["Title"] = "Delete Table";
}

<h1 class="mb-4"><i class="bi bi-trash"></i> Delete Table</h1>

<div class="alert alert-warning" role="alert">
    <h4 class="alert-heading"><i class="bi bi-exclamation-triangle"></i> Warning</h4>
    <p>Are you sure you want to delete this table? This action cannot be undone.</p>
</div>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <h4 class="card-title mb-3"><i class="bi bi-info-circle"></i> Table Details</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">
                <i class="bi bi-text-paragraph"></i> @Html.DisplayNameFor(model => model.Table.Description)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Table.Description)
            </dd>

            <dt class="col-sm-3">
                <i class="bi bi-qr-code-scan"></i> @Html.DisplayNameFor(model => model.Table.QRCodeTable)
            </dt>
            <dd class="col-sm-9">
                <img src="@Model.Table.QRCodeTable" alt="QR Code" class="img-thumbnail mb-2" style="max-width: 150px;" />
            </dd>

            <dt class="col-sm-3">
                <i class="bi bi-toggle-off"></i> @Html.DisplayNameFor(model => model.Table.IsDeleted)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Table.IsDeleted)
            </dd>

            <dt class="col-sm-3">
                <i class="bi bi-toggle-on"></i> @Html.DisplayNameFor(model => model.Table.IsActive)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Table.IsActive)
            </dd>

            <dt class="col-sm-3">
                <i class="bi bi-calendar-check"></i> @Html.DisplayNameFor(model => model.Table.CreateDate)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Table.CreateDate)
            </dd>

            <dt class="col-sm-3">
                <i class="bi bi-calendar-edit"></i> @Html.DisplayNameFor(model => model.Table.ModifyDate)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Table.ModifyDate)
            </dd>
        </dl>

        <form method="post" class="mt-4">
            <input type="hidden" asp-for="Table.TableID" />
            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash3"></i> Confirm Delete
                </button>
                <a asp-page="./Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left-circle"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
